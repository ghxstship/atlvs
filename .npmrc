# Enable hoisting for better compatibility
shamefully-hoist=true

# Auto-install peers to avoid warnings
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Allow these packages to run build scripts
enable-pre-post-scripts=true

# Disable build scripts approval requirement (safe for CI/CD)
# This allows critical packages like Prisma, esbuild, sharp to run their install scripts
ignore-scripts=false
