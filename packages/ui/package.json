{
  "name": "@ghxstship/ui",
  "version": "0.0.2",
  "type": "module",
  "main": "src/index.ts",
  "sideEffects": [
    "src/styles.css"
  ],
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "chromatic": "chromatic --exit-zero-on-changes",
    "generate:tokens": "tsx scripts/generate-css-tokens.ts",
    "validate:tokens": "tsx scripts/validate-tokens.ts",
    "validate:tokens:ci": "tsx scripts/validate-tokens.ts --ci",
    "lint:tokens": "eslint --config .eslintrc.tokens.js 'src/**/*.{ts,tsx,js,jsx,css,scss}'",
    "lint:tokens:ci": "eslint --config .eslintrc.tokens.js --max-warnings 0 'src/**/*.{ts,tsx,js,jsx,css,scss}'",
    "fix:colors": "tsx ../../scripts/fix-hardcoded-colors.ts .",
    "validate:imports": "tsx scripts/validate-imports.ts ../../apps/web ../../apps/docs",
    "validate:imports:ci": "tsx scripts/validate-imports.ts ../../apps/web ../../apps/docs",
    "validate:design-tokens": "tsx scripts/validate-design-tokens.ts",
    "validate:design-tokens:ci": "tsx scripts/validate-design-tokens.ts",
    "validate:all": "pnpm validate:tokens && pnpm validate:imports && pnpm validate:design-tokens",
    "prepare": "node -e \"try { if (process.env.CI !== 'true' && process.env.VERCEL !== '1') { require('child_process').execSync('cd ../.. && husky install', { stdio: 'inherit' }); } } catch (e) {}\""
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.3.0"
  },
  "peerDependencies": {
    "lucide-react": "^0.454.0",
    "next-themes": "^0.2.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.1.6",
    "@storybook/addon-docs": "^8.1.6",
    "@storybook/addon-essentials": "^8.1.6",
    "@storybook/addon-interactions": "^8.1.6",
    "@storybook/nextjs": "^8.1.6",
    "@storybook/react": "^8.1.6",
    "@storybook/test-runner": "^0.16.0",
    "chromatic": "^10.0.0",
    "lucide-react": "^0.454.0",
    "next-themes": "^0.2.1",
    "storybook": "^8.1.6"
  }
}
