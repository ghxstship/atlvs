{
  "dashboard": {
    "title": "GHXSTSHIP Infrastructure",
    "tags": ["ghxstship", "infrastructure"],
    "timezone": "browser",
    "panels": [
      {
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=~\"ghxstship.*\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=~\"ghxstship.*\"}",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{namespace=~\"ghxstship.*\"}[5m])",
            "legendFormat": "{{pod}} - RX"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{namespace=~\"ghxstship.*\"}[5m])",
            "legendFormat": "{{pod}} - TX"
          }
        ]
      },
      {
        "title": "Disk I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total{namespace=~\"ghxstship.*\"}[5m])",
            "legendFormat": "{{pod}} - Read"
          },
          {
            "expr": "rate(container_fs_writes_bytes_total{namespace=~\"ghxstship.*\"}[5m])",
            "legendFormat": "{{pod}} - Write"
          }
        ]
      }
    ]
  }
}
