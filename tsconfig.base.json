{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/src/*"],
      "@config/*": ["packages/config/src/*"],
      "@utils/*": ["packages/utils/src/*"],
      "@auth/*": ["packages/auth/src/*"],
      "@analytics/*": ["packages/analytics/src/*"],
      "@data-view/*": ["packages/data-view/src/*"],
      "@icons/*": ["packages/icons/src/*"],
      "@ghxstship/ui": ["packages/ui/src/index.ts"],
      "@ghxstship/ui/*": ["packages/ui/src/*"],
      "@ghxstship/config": ["packages/config/src/index.ts"],
      "@ghxstship/config/*": ["packages/config/src/*"],
      "@ghxstship/utils": ["packages/utils/src/index.ts"],
      "@ghxstship/utils/*": ["packages/utils/src/*"],
      "@ghxstship/auth": ["packages/auth/src/index.ts"],
      "@ghxstship/auth/*": ["packages/auth/src/*"],
      "@ghxstship/analytics": ["packages/analytics/src/index.ts"],
      "@ghxstship/analytics/*": ["packages/analytics/src/*"],
      "@ghxstship/data-view": ["packages/data-view/src/index.ts"],
      "@ghxstship/data-view/*": ["packages/data-view/src/*"],
      "@ghxstship/icons": ["packages/icons/src/index.ts"],
      "@ghxstship/icons/*": ["packages/icons/src/*"],
      "@ghxstship/domain": ["packages/domain/src/index.ts"],
      "@ghxstship/domain/*": ["packages/domain/src/*"],
      "@ghxstship/application": ["packages/application/src/index.ts"],
      "@ghxstship/application/*": ["packages/application/src/*"],
      "@ghxstship/infrastructure": ["packages/infrastructure/src/index.ts"],
      "@ghxstship/infrastructure/*": ["packages/infrastructure/src/*"],
      "@branding/*": ["branding/*"]
    },
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true
  }
}
