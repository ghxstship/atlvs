# Run token validation
cd packages/ui && pnpm validate:tokens:ci

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ Design token validation failed!"
  echo ""
  echo "Hardcoded color values detected. Please fix before committing."
  echo ""
  echo "Quick fix:"
  echo "  pnpm fix:colors"
  echo "  pnpm validate:tokens"
  echo ""
  exit 1
fi

echo "âœ… Design tokens validated successfully!"
