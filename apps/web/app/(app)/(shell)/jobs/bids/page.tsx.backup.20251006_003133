import { createServerClient } from '@ghxstship/auth';
import { redirect } from 'next/navigation';
import { getTranslations } from 'next-intl/server';
import { BidsClient } from './BidsClient';
import CreateBidClient from './CreateBidClient';

export const dynamic = 'force-dynamic';


export const metadata = { title: 'Jobs Â· Bids' };

export default async function JobsBidsPage() {
  const supabase = await createClient();
  
  const {
    data: { user },
  } = await supabase.auth.getUser();

  if (!user) {
    redirect('/auth/login');
  }

  // Get user's organization
  const { data: profile } = await supabase
    .from('user_profiles')
    .select('organization_id')
    .eq('user_id', user.id)
    .single();

  if (!profile?.organization_id) {
    redirect('/onboarding');
  }

  const t = await getTranslations('jobs');

  return (
    <div className="stack-lg">
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-heading-3 text-heading-4 color-foreground">{t('bids.title')}</h1>
          <p className="color-muted">{t('bids.subtitle')}</p>
        </div>
        <CreateBidClient orgId={profile.organization_id} />
      </div>
      
      <BidsClient
        user={user}
        orgId={profile.organization_id}
        translations={{
          title: t('bids.title'),
          subtitle: t('bids.subtitle'),
        }}
      />
    </div>
  );
}
