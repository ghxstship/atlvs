{
  "name": "ghxstship-monorepo",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "dev:core": "corepack pnpm -r --workspace-concurrency=1 run dev",
    "build:core": "corepack pnpm -r run build",
    "lint:core": "corepack pnpm -r run lint",
    "typecheck:core": "corepack pnpm -r run typecheck",
    "lint:tokens:colors": "eslint --ext .ts,.tsx --rule 'no-hardcoded-colors: error' .",
    "lint:tokens:spacing": "eslint --ext .ts,.tsx --rule 'no-hardcoded-spacing: error' .",
    "lint:tokens:shadows": "eslint --ext .ts,.tsx --rule 'no-hardcoded-shadows: warn' .",
    "lint:tokens:motion": "eslint --ext .ts,.tsx --rule 'no-hardcoded-motion: warn' .",
    "lint:imports": "eslint --ext .ts,.tsx --rule 'consistent-imports: error' .",
    "lint:legacy-imports": "eslint --ext .ts,.tsx --rule 'no-legacy-imports: error' ."
  },
  "devDependencies": {
    "@types/node": "^20.19.14",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@supabase/ssr": "^0.5.2"
  }
}